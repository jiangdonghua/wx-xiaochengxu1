/* page/order/list/index.wxss */
page, .scroll-view {
    height: 100%;
}

.order-item {
    position: relative;
    margin-top: 15px;
    padding: 0 10px;
    background-color: #fff;
    overflow: hidden;
    
}

.order-item__hd {
    display: flex;
    padding: 8px 0 8px 35px;
    border-bottom: 1rpx solid #d9d9d9;
}
.order-item__type {
    width: 20px;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: #fff;
    text-align: center;
    background-color: #25a1fa;
    border-radius: 3px;
}
.order-item__type::after {
    content: '送';
}

.order-item__status {
    position: absolute;
    top: -18px;
    left: -28px;
    padding: 30px 15px 0;
    color: #fff;
    font-size: 12px;
    background-color: #25a1fa;
    transform: rotate(-45deg);
}

.order-item__goods-info {
    flex: 1;
    padding: 0 10px;
}

.order-item__bd {
    padding: 8px 0;
}

.order-item_send .order-item__status, .order-item_send .order-item__type {
    background-color: #25a1fa;
}

.order-item_buy .order-item__status, .order-item_buy .order-item__type {
    background-color: #F7668B;
}

.order-item_buy .order-item__type::after {
    content: '买';
}

.weui-loadmore__tips_in-line {
    background-color: #f8f8f8;
}
