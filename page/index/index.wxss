/* page/index/index.wxss */

page {
    background-color: #fff;
}
.banner image {
    display: block;
    width: 100%;
}


.navigator image {
    width: 92px;
    height: 60px;
}

.navigator {
    padding: 10px 0;
    text-align: center;
    font-size: 14px;
}

.navigator:not(:last-child) {
    border-right: 1px solid #f8f8f8;
}

.navigator-hover {
    background-color: rgba(0, 0, 0, 0.1);
}
.navigator__title, .navigator__desc {
    margin-top: 5px;
}

.navigator__title {
    display: inline-block;
    padding: 0 10px;
    color: #fff;
    background-color: #25a1fa;
    border-radius: 10px/50%;
}

.order {
    margin: 60px 15px 40px;
    padding: 5px 10px 5px 15px;
    border: 1px solid #25a1fa;
    border-radius: 20px/50%;
    align-items:center;
}


.order button {
    margin-top: 0;
    border-radius: 15px/50%;
}