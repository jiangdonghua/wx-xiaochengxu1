Page {
    padding-bottom: 46px;
}

.btn-add {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 46px;
    line-height: 46px;
    color: #fff;
    text-align: center;
    background-color: #25a1fa;
}

.btn-edit {
    position: absolute;
    top: 50%;
    right: 15px;
    margin-top: -10px;
}

.btn-edit image {
    width: 20px; 
    height: 20px;
}